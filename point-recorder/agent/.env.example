##
## Banco (MySQL)
##
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=appll
DB_USERNAME=appll
DB_PASSWORD=change-me

##
## Agent
##
# Caminho para o template gravado (relativo ao diretório point-recorder)
AGENT_TEMPLATE_PATH=recordings/template.json

# (Opcional) template executado antes do principal, útil para etapa de login
AGENT_LOGIN_TEMPLATE_PATH=

# Pasta de saída para screenshots
AGENT_SCREENSHOTS_DIR=screenshots

# Intervalo de polling em ms (default 5000)
AGENT_POLL_INTERVAL_MS=5000

# Tempo máximo (ms) de espera entre eventos no replay (segurança)
# Use 0 para não limitar (respeita exatamente o timing gravado)
AGENT_MAX_DELAY_MS=5000

# Escala de velocidade do replay (1.0 = normal, 2.0 = 2x mais rápido)
AGENT_SPEED=1.0

# Se true, tenta reproduzir caracteres digitados do template (recomendado: false)
AGENT_REPLAY_TEXT=false

# Se true, mostra bolinha visual no ponto de cada clique durante o replay (debug)
AGENT_REPLAY_VISUAL_DEBUG=false

# Duração da bolinha visual em ms
AGENT_REPLAY_VISUAL_MS=180

# Tamanho da bolinha visual em pixels (largura/altura)
AGENT_REPLAY_VISUAL_DOT_W=12
AGENT_REPLAY_VISUAL_DOT_H=12

# Se true, mostra um card com X/Y do ponto clicado durante o debug visual
AGENT_REPLAY_VISUAL_SHOW_CARD=true

# Espera antes de começar o template (ms). Útil para template gravado pós-login.
AGENT_PRE_REPLAY_WAIT_MS=0

# Senha de login do e-System (usada no slot "senha", marcado com F9 no template)
AGENT_LOGIN_PASSWORD=

# Espera extra (ms) após enviar ENTER no slot senha (ajuda quando o pós-login é lento)
AGENT_POST_LOGIN_WAIT_MS=0

# Espera entre template de login e template principal (ms)
AGENT_BETWEEN_TEMPLATES_WAIT_MS=0

# Se quiser recortar o print ao redor do último clique:
# Exemplo: 700x520 (ajuste conforme seu modal)
AGENT_SCREENSHOT_CROP_W=0
AGENT_SCREENSHOT_CROP_H=0

# Se true, o replay para no primeiro evento de screenshot (recomendado)
AGENT_TEMPLATE_STOP_AT_SCREENSHOT=true

##
## Logs
##
# Arquivo de log (relativo ao diretório point-recorder)
AGENT_LOG_FILE=logs/agent.log

# Nível: debug|info|warn|error
AGENT_LOG_LEVEL=info

# Logar também no console
AGENT_LOG_CONSOLE=true

##
## OCR (IA local via Tesseract)
##
AGENT_OCR_ENABLED=true
AGENT_OCR_LANG=por

# Quando OCR detectar mensagem transitória ("não está respondendo"), esperar e tentar de novo.
AGENT_TRANSIENT_RETRY_ENABLED=true

# Intervalo entre tentativas (ms). Ex.: 20000 = 20s
AGENT_TRANSIENT_RETRY_WAIT_MS=20000

# Máximo de tentativas extras após a primeira imagem.
AGENT_TRANSIENT_RETRY_MAX_RETRIES=6

# (Opcional) palavras-chave extras separadas por vírgula para gatilhar retentativa.
# Ex.: AGENT_TRANSIENT_KEYWORDS=aguarde,carregando,processando
AGENT_TRANSIENT_KEYWORDS=

##
## Upload para backend (recomendado quando OCR roda no servidor)
##
AGENT_UPLOAD_ENABLED=false
AGENT_UPLOAD_URL=https://seu-dominio/api/public/placas-0km/screenshot
AGENT_UPLOAD_API_KEY=
